<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#8DAFA1">
	
	<TextView android:text="Current Tidal Prediction" 
	    android:id="@+id/bPrediction5"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:text="Name" 
	    android:id="@+id/tidesite"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="1">
	</TextView>
	
	<TextView android:text="Date" 
	    android:id="@+id/calendar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="2">
	</TextView>
	
	<TextView android:text="Tidal Prediction" 
	    android:id="@+id/tidepre"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="3">
	</TextView>
	
	<TextView android:text="Wave Height" 
	    android:id="@+id/waveheight"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="4">
	</TextView>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tide Prediction"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/cityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:hint="Enter Seattle or Tacoma City Here"/>
        <requestFocus />

    <Button
        android:id="@+id/tideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done" />
    
    <TextView
        android:id="@+id/BrowserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OLYMPIA - Washington's razor clam season will get off to an early start this year with an evening dig at Twin Harbors beach set for Sept. 19-23. "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/webButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="How to Dig Razor Clams" />

</LinearLayout>