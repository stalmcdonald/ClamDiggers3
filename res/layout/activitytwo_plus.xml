<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#8DAFA1">
	
	
	
	<TextView
        android:id="@+id/tvWater"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Choose between the following cities: 
        Seattle, Tacoma or Olympia  " />
	
	<TextView 
	    android:text="City:" 
	    android:id="@+id/tvCity"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"> 
	</TextView>
	
	<EditText 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/etCity">
		<requestFocus></requestFocus>
	</EditText>
	
	<Button 
	    android:id="@+id/bPredictionLow" 
	    android:text="Get Coordinates"
		android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_gravity="center"
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
		android:background="@drawable/brownbutton">
	</Button>
	
	<TextView android:text="Current Tidal Prediction" 
	    android:id="@+id/bPrediction5"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:text="Name" 
	    android:id="@+id/tidesite"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="1">
	</TextView>
	
	<TextView android:text="Date" 
	    android:id="@+id/calendar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="2">
	</TextView>
	
	<TextView android:text="Tidal Prediction" 
	    android:id="@+id/tidepre"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="3">
	</TextView>
	
	<TextView android:text="Wave Height" 
	    android:id="@+id/waveheight"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="4">
	</TextView>
   
    <TextView
        android:id="@+id/BrowserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OLYMPIA - Washington's razor clam season will get off to an early start this year with an evening dig at Twin Harbors beach set for Sept. 19-23. "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/webButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_gravity="center"
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
		android:background="@drawable/brownbutton"
        android:text="How to Dig Razor Clams" />

</LinearLayout>